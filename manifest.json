{
    "manifest_version": 3,
    "name": "DocuAid Chatbot",
    "version": "1.0",
    "description": "A chatbot extension for documentation websites.",
    "permissions": ["storage", "activeTab"],
    "host_permissions": ["https://generativelanguage.googleapis.com/*"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon128.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon128.png",
        "128": "icon128.png"
    }
}
